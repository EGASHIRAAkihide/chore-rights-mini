{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@chorerights/lib": ["packages/lib/src/index.ts"],
      "@chorerights/lib/*": ["packages/lib/src/*"],
      "@chorerights/db": ["packages/db/src/index.ts"],
      "@chorerights/db/*": ["packages/db/src/*"],
      "csv-stringify/sync": ["scripts/lib/csv-stringify-sync.ts"]
    },
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "types": ["node"]
  },
  "include": ["apps", "packages", "scripts"],
  "exclude": ["node_modules", ".next", "dist"]
}
